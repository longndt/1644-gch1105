<table class="table table-primary">
   <tr>
      <th class="h1 text-center text-uppercase 
      text-danger" colspan="2">
         Employee Detail
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <td>{{ employee.name }}</td>
   </tr>
   <tr>
      <th>Gender</th>
      <td>{{ employee.gender }}</td>
   </tr>
   <tr>
      <th>Birthday</th>
      <td>{{ dateFormat employee.birthday "DD/MM/YYYY" }}</td>
   </tr>
   <tr>
      <th>Email</th>
      <td>{{ employee.email }}</td>
   </tr>
   <tr>
      <th>Position</th>
      <td>{{ employee.position }}</td>
   </tr>
   <tr>
      <th>Introduction</th>
      <td>{{ employee.introduction }}</td>
   </tr>
</table>