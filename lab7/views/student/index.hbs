<div class="container col-md-8 text-center">
   <table class="table table-danger">
      <tr>
         <th colspan="3" class="h1 text-uppercase text-success">
            Student List
         </th>
         <th>
            <a class="btn btn-primary" href="/add">Add</a>
         </th>
      </tr>
      <tr>
         <th>Student Name</th>
         <th>Student Birthday</th>
         <th>Student Image</th>
         <th>Menu</th>
      </tr>
      {{#each students }}
      <tr>
         <td>{{ name }}</td>
         <td>{{ dateFormat dob "DD/MM/YYYY" }}</td>
         <td>
            <img src="{{ image }}" width="150" height="150">
         </td>
         <td>
            <a class="btn btn-warning" href="/edit/{{ _id }}">Edit</a>
            <a class="btn btn-danger" href="/delete/{{ _id }}">Delete</a>
         </td>
      </tr>
      {{/each}}
   </table>
</div>